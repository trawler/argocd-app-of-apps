apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: daughter-app-4
  namespace: argocd
  finalizers:
    - {{ .Values.metadata.finalizer }}
spec:
  destination:
    namespace: argocd
    server: {{ .Values.spec.destination.server }}
  project: default
  source:
    path: {{ .Values.spec.source.path }}/daughter-app-4
    repoURL: {{ .Values.spec.source.repoURL }}
    targetRevision: {{ .Values.spec.source.targetRevision }}
  syncPolicy:
    automated:
      prune: true
